{{> header}}

<section id="receipt-details-view">
    <h1>Receipt Details</h1>
    <div class="table">
        <div class="table-head">
            <div class="col wide">Product Name</div>
            <div class="col wide">Quantity</div>
            <div class="col wide">Price per Unit</div>
            <div class="col">Sub-total</div>
        </div>

        {{#each entries}}
            {{> entry}}
        {{else}}
            <div class="row">
                <p>No entries in databse.</p>
            </div>
        {{/each}}

        <div class="table-head">
            <div class="col wide"></div>
            <div class="col wide"></div>
            <div class="col wide">Total:</div>
            <div class="col">{{total}}</div>
        </div>

    </div>
</section>

{{> footer}}