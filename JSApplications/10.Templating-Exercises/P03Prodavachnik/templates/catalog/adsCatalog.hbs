<div id="ads" class="ads">
    {{#if noAds}}
        <h4>No ads in database.</h4>
    {{else}}
        <table>
            <tr>
                <th>Title</th>
                <th>Publisher</th>
                <th>Description</th>
                <th>Price</th>
                <th>Date Published</th>
                <th>Action</th>
            </tr>
            {{#each ads}}
                {{> ad}}
            {{/each}}
        </table>
    {{/if}}
</div>